{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "make",
            "type": "shell",
            "command": "make",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "./clean.sh"
        },
        {
            "label": "ecore2v on current file",
            "type": "shell",
            "command": "java",
            "args": ["-cp", "./build/libs/fr.inria.atlanmod.coqtl.generators-all.jar", "fr.inria.atlanmod.coqtl.ecore.core.EcoreGeneratorDriver",
                "${relativeFile}"]
        },
        {
            "label": "xmi2v Exemple-ATOM.xmi",
            "type": "shell",
            "command": "java",
            "args": ["-jar", "./build/libs/fr.inria.atlanmod.coqtl.generators-all.jar", 
                "./examples/RSS2ATOM/tests/Exemple-ATOM.xmi",
                "./examples/RSS2ATOM/ATOM.ecore" ]
        },
    ]
}
